/**index.wxss**/
page{
  height:100%
}
.container-home{
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 0;
  box-sizing: border-box;
  background:red; /* 一些不支持背景渐变的浏览器 */  
  background:-moz-linear-gradient(top, #1c1f20, #396b7e);  
  background:-webkit-gradient(linear, 0 0, 0 bottom, from(#1c1f20), to(#396b7e));  
  background:-o-linear-gradient(top, #1c1f20, #396b7e); 
}

.copy-right{
  position: absolute;
  bottom: 20px;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 12px;
  color: #fff;
  opacity: 0.6;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 3vw;
}
.logo text{
  color: #fff;
  padding-top: 10px;
  font-size: 24px;
}
.logo image {
  width: 200rpx;
  height: 200rpx;
}

.section {
  position: relative;
  width: 85%;
  margin-top: 20px;
}

.section text{
  position: absolute;
  left: 10px;
  top: 50%;
  transform: translateY(-55%);
  color: #999;
}

.section input {
  background-color: #fff;
  color: #999;
  border-radius: 20px;
  height: 45px;
  padding: 0 15px 0 40px;
  font-size: 16px;
}

.section-checked{
  width: 85%;
  margin-top: 20px;
  padding-left: 20px;
  font-size: 16px;
  color: #fff;
  opacity: 0.8;
}

.section-checked label{
  cursor: pointer;
}

.section-checked text{
  vertical-align: middle;
  margin-right: 10px;
}

.section-btn{
  width: 85%;
  margin-top: 40px;
  border: 1px solid #fff;
  text-align: center;
  border-radius: 20px;
  padding: 8px 0;
  color: #fff;
}

.icon-user:before {
  content: "\e639";
}

.icon-password:before {
  content: "\e82b";
}

.icon-unchecked:before {
  content: "\e609";
}

.icon-checked:before {
  content: "\e606";
}
